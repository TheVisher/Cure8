generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Card {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  url       String
  image     String?
  notes     String?
  tags      Tag[]    @relation("TagsOnCards", references: [id])
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  cards Card[] @relation("TagsOnCards")
}
