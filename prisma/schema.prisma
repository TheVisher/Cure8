generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Card {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  url         String
  domain      String?
  image       String?
  description String?
  notes       String?
  state       String   @default("ok")  // ok, pending, error
  tags        Tag[]    // implicit many-to-many
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique
  cards Card[] // implicit many-to-many
}

model Settings {
  id                 String  @id @default(cuid())
  userId             String  @default("default") @unique
  autoFetchMetadata  Boolean @default(true)
  showThumbnails     Boolean @default(true)
  previewServiceUrl  String  @default("http://localhost:8787/preview?url={{url}}")
  layoutMode         String  @default("grid") // grid, masonry, list, compact
}
